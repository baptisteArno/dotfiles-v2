[
  {
    "key": "space w",
    "command": "workbench.action.files.save",
    "when": "editorTextFocus && vim.mode != 'Insert'"
  },
  {
    "key": "space h",
    "command": "editor.action.showHover",
    "when": "editorTextFocus && vim.mode != 'Insert'"
  },

  // Splits
  {
    "key": "space s s",
    "command": "workbench.action.splitEditor",
    "when": "editorTextFocus && !inDebugRepl && vim.mode == 'Normal'"
  },
  {
    "key": "space s k",
    "command": "workbench.action.closeActiveEditor",
    "when": "editorTextFocus && !inDebugRepl && !activeEditorGroupEmpty && activeEditorGroup != 1 && vim.mode == 'Normal'"
  },
  {
    "key": "shift+cmd+s",
    "command": "workbench.action.terminal.split",
    "when": "terminalFocus"
  },
  {
    "key": "shift+cmd+k",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },

  // Search
  {
    "key": "space f f",
    "command": "workbench.action.quickOpen",
    "when": "(editorTextFocus && vim.mode != 'Insert') || (!editorTextFocus && !inputFocus)"
  },
  {
    "key": "space f g",
    "command": "workbench.view.search.focus",
    "when": "(editorTextFocus && vim.mode != 'Insert') || (!editorTextFocus && !inputFocus)"
  },
  {
    "key": "space f b",
    "command": "workbench.action.showAllEditors",
    "when": "(editorTextFocus && vim.mode != 'Insert') || (!editorTextFocus && !inputFocus)"
  },

  // Code actions
  {
    "key": "space c a",
    "command": "editor.action.quickFix",
    "when": "editorTextFocus && vim.mode != 'Insert'"
  },
  {
    "key": "space c r",
    "command": "editor.action.rename",
    "when": "editorTextFocus && vim.mode != 'Insert'"
  },
  {
    "key": "] d",
    "command": "editor.action.marker.next",
    "when": "editorTextFocus && vim.mode != 'Insert'"
  },
  {
    "key": "[ d",
    "command": "editor.action.marker.prev",
    "when": "editorTextFocus && vim.mode != 'Insert'"
  },

  // AI
  {
    "key": "space a i",
    "command": "inlineChat.start",
    "when": "(editorTextFocus && vim.mode == 'VisualLine')"
  },
  {
    "key": "space a a",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.panel.chatEditing",
        "workbench.action.chat.newEditSession"
      ]
    },
    "when": "(editorTextFocus && vim.mode != 'Insert') || (!editorTextFocus && !inputFocus)"
  },
  {
    "key": "space b d",
    "command": "workbench.action.closeAuxiliaryBar",
    "when": "config.workbench.activityBar.location == 'default' && ((editorTextFocus && vim.mode != 'Insert') || (!editorTextFocus && !inputFocus))"
  },

  // Move between panels
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp"
  },

  // Files explorer
  {
    "key": "space e",
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "(editorTextFocus && vim.mode != 'Insert') || (!editorTextFocus && !inputFocus)"
  },
  {
    "key": "d",
    "command": "explorer.newFolder",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "r",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "f",
    "command": "explorer.newFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },

  // Buffers
  {
    "key": "space b d",
    "command": "workbench.action.closeActiveEditor",
    "when": "editorTextFocus && vim.mode != 'Insert'"
  },
  {
    "key": "space b o",
    "command": "workbench.action.closeOtherEditors",
    "when": "(editorTextFocus && vim.mode != 'Insert') || (!editorTextFocus && !inputFocus)"
  },

  // Git
  {
    "key": "space g g",
    "command": "workbench.scm.focus",
    "when": "(editorTextFocus && vim.mode != 'Insert') || (!editorTextFocus && !inputFocus)"
  },
  {
    "key": "space g r",
    "command": "git.revertSelectedRanges",
    "when": "editorTextFocus && vim.mode != 'Insert'"
  },
  {
    "key": "] c",
    "command": "workbench.action.editor.nextChange",
    "when": "editorTextFocus && vim.mode != 'Insert'"
  },
  {
    "key": "] c",
    "command": "workbench.action.compareEditor.nextChange",
    "when": "textCompareEditorActive && vim.mode != 'Insert' && editorTextFocus"
  },
  {
    "key": "[ c",
    "command": "workbench.action.editor.previousChange",
    "when": "editorTextFocus && vim.mode != 'Insert'"
  },
  {
    "key": "[ c",
    "command": "workbench.action.compareEditor.previousChange",
    "when": "textCompareEditorActive && editorTextFocus && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+k",
    "command": "git.stage",
    "when": "workbench.scm.active"
  },
  {
    "key": "ctrl+j",
    "command": "git.unstage",
    "when": "workbench.scm.active"
  },

  // Extensions
  // // Cloak
  {
    "key": "space x c",
    "command": "cloak.toggleSecrets",
    "when": "editorTextFocus && vim.mode != 'Insert'"
  }
]
